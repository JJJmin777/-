<!-- Í∏∞Ï°¥ Î¶¨Î∑∞ Î™©Î°ù -->
<% for (let review of sortedReviews) { %>
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">
                <%= review.author.username %>
            </h5>
            <p class="card-text">
                Rated: <%= review.rating %>/5 ‚≠ê
            </p>
            <!-- Î¶¨Î∑∞ Î≥∏Î¨∏ -->
            <div class="review-body">
                <%= review.body %>
            </div>
            <button class="toggle-button">Read More</button>

            <h6 class="card-subtitle mb-2 text-muted">Reviewed on: <%= review.createdAt.toLocaleDateString() %></h6>

            <!-- Ï¢ãÏïÑÏöî Î∞è ÎåìÍ∏Ä Î≤ÑÌäº -->
            <div class="d-flex align-items-center">
                <button class="btn btn-sm btn-outline-primary like-button"
                    data-book-id="<%= book._id %>"
                    data-review-id="<%= review._id %>"
                    data-liked="<%= currentUser ? (review.likes || []).includes(currentUser._id) : false %>"
                    <%= currentUser ? '' : 'disabled' %>>
                    <span class="like-icon">
                        <%= currentUser && review.likes.includes(currentUser._id) ? '‚ù§Ô∏è' : 'ü§ç' %>
                    </span>
                    <span class="like-count">
                        <%= review.likes.length %>
                    </span>
                </button>
                <button class="btn btn-sm btn-outline-secondary ms-2"
                    onclick="toggleComments('<%= review._id %>')">
                    üí¨ Comments (<span id="comment-count-<%= review._id %>">
                        <%= review.comments.length %>
                    </span>)
                </button>
            </div>

            <!-- ÎåìÍ∏Ä ÏòÅÏó≠ -->
            <div id="comments-<%= review._id %>" class="mt-3 d-none">
                <% for (let comment of review.comments) { %>
                    <div class="mb-2">
                        <strong>
                            <%= comment.author.username %>:
                        </strong>
                        <%= comment.body %>
                        <h6 class="card-subtitle mb-2 text-muted fs-6">Comment on: <%=
                            comment.createdAt.toLocaleDateString() %>
                        </h6>
                        <% if (currentUser &&
                                comment.author._id.toString()===currentUser._id.toString()) { %>
                                <form
                                    action="/books/<%= book._id %>/reviews/<%= review._id %>/comments/<%= comment._id %>?_method=DELETE"
                                    method="POST" class="d-inline">
                                    <button class="btn btn-sm btn-danger delete-comment-btn"
                                        data-book-id="<%= book._id %>"
                                        data-comment-id="<%= comment._id %>"
                                        data-review-id="<%= review._id %>">
                                        Delete
                                    </button>
                                </form>
                                <% } %>
                    </div>
                    <% } %>
                    <% if (currentUser) { %>
                        <form class="comment-form" data-book-id="<%= book._id %>"
                            data-review-id="<%= review._id %>">
                            <div class="input-group">
                                <input type="text" name="body" class="form-control comment-input"
                                    placeholder="Add a comment" required>
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                        </form>
                    <% } else { %>
                        <div class="alert alert-warning">You must be logged in to add a comment.</div>
                    <% } %>
            </div>


            <% if (currentUser && review.author.equals(currentUser)) { %>
                <div class="action-buttons mt-3">
                                
                     <a href="/books/<%= book._id %>/reviews/<%= review._id %>/edit?redirect=/books/<%= book._id %>" 
                        class="btn btn-sm btn-outline-warning me-2">Edit</a>
                                
                        <!-- Delete Button triggers the Modal -->
        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-<%= review._id %>">
            Delete
        </button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal-<%= review._id %>" tabindex="-1" aria-labelledby="deleteModalLabel-<%= review._id %>" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel-<%= review._id %>">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this review? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/books/<%= book._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

                <% } %>
        </div>
    </div>
    <% } %>
