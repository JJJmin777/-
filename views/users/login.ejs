<title>로그인</title>
<link rel="stylesheet" href="stylesheets/login.css">

<div class="form-container">
    <h2 class="form-title ">로그인</h2>
    <form action="/login?returnurl=<%= currentUrl %>" method="POST">
        <!-- Email -->
        <div class="mb-3">
            <label for="username" class="form-label">아이디</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="아이디를 입력하세요" required>
        </div>
        <!-- Password -->
        <div class="mb-3">
            <label for="password" class="form-label">비밀번호</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="비밀번호를 입력하세요"
                required>
        </div>
        <!-- reCAPTCHA -->
        <div class="mb-3 g-recaptcha" data-sitekey="<%= siteKey %>"></div> <!-- Google에서 발급받은 사이트키 사용 -->
        <!-- Submit Button -->
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">로그인</button>
        </div>
        <!-- Register Link -->
        <div class="link">
            계정이 없으신가요? <a href="/register">회원가입</a>
            <br>
            <a href="/forgot-password">비밀번호를 잊으셨나요?</a>
        </div>
    </form>
</div>

